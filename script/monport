#!/usr/bin/perl
use strict;
use warnings;
use App::Monport;

# Read in what ports shoud be open from a config file
my %ports = (
    host1 => { expected => [ 22 ] },
    host2 => { expected => [ 22, 80, 442 ] },
    host3 => { expected => [] },
);

# Scan the targets
for my $host (keys %ports) {
    my @open = scan_ports($host);
    $ports{$host}{open} = [ @open ]; 
}

# Compare the scan with the config file

